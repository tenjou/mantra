{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "esnext",
        "module": "commonjs",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "sourceMap": true,
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "moduleResolution": "Node"
    },
    "include": ["src/**/*"]
}
